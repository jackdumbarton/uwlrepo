#returns the result of num1 plus num2
def add (num1, num2):
    return num1 + num2
#returns the result of num1 minus num2
def sub (num1, num2):
    return num1 - num2
#returns the result of num1 divided by num2
def div (num1, num2):
    return num1 / num2
#returns the result of num1 times num2
def mul (num1, num2):
    return num1 * num2

def main():
    opperation = input ("what opperation do you want to use? (+, -, /, *):")
    if(opperation != '+' and opperation != '-' and opperation != '/' and opperation != '*'):
        #invalid opperation
        print("you must enter a valid opperation")
    else:
            num1 = int(input("Enter num1:")) #adding 'int' returns the intger(number) insted of the string
            num2 = int(input("Enter num2:"))
            if(opperation == '+'):
                print(add(num1, num2))
            elif(opperation == '-'):
                print(sub(num1, num2))
            elif(opperation == '/'):
                print(div(num1, num2))
            else:
                print(mul(num1, num2))

   



main()
        
